@model WKSATournament.Models.TournamentStats
<section class="featured">
    <div class="content-wrapper">
        <hgroup class="title">
            <h1>@Model.TournamentName.</h1>
            <h2>@Model.TournamentDetails</h2>
            @Html.ActionLink("Home", "Details", "Tournament", new { id = Model.TournamentId }, null)
            @Html.ActionLink("Edit Settings", "Edit", "Tournament", new { id=Model.TournamentId }, null)
        </hgroup>
        <table>
            <tr>
                <td>Total Competitors:<span class="highlight">@Model.TotalCompetitors</span></td>
                <td align="right">Divisions Completed:<span class="highlight">@Model.CompletedDivisions/@Model.TotalDivisions</span></td>
                <td align="right">Divisions Requiring Medals:<span class="highlight">@Model.MedalsRequired</span></td>
            </tr>
        </table>
    </div>
</section>